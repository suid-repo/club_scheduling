@model WebApplication.Core.Family

@{
    ViewBag.Title = "MyFamily";
}

<h2>MyFamily</h2>

<div>
    <h4>Family</h4>
    <hr />
    @if (Model != null)
    {
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Users)
        </dt>

        <dd>

            @if (Model.Users.Count > 0)
            {
                Html.RenderPartial("_UserList", Model.Users);
            }
            else
            {
                <p>No users</p>
            }

        </dd>
    </dl>
        
    }
    else
    {
        <p>@I18N.View.Family.MyFamily_Create_Disclaimer</p>
        <p>@Html.ActionLink(I18N.GenericAction.create, "Create", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })</p>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) 
    @Html.ActionLink("Back to List", "Index")
</p>
