@model WebApplication.Models.ApplicationUser
@using WebApplication.Extentions;
@{
    ViewBag.Title = "RemoveMember";
}

<h2>@I18N.View.Family.RemoveMember_Title</h2>

<h3>@I18N.View.Family.RemoveMember_Subtitle</h3>
<div>
    <h4>@I18N.View.Family.RemoveMember_Subtitle2</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
