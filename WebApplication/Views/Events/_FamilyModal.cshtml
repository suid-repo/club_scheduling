@using Microsoft.AspNet.Identity;
@model WebApplication.Models.EventFamilyModalViewModel

<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@I18N.View.Event._Family_Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table>
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(u => u.User.FirstName)</th>
                            <th>@Html.DisplayNameFor(u => u.User.LastName)</th>
                            <th>Level ?</th>
                            <th>@Html.DisplayNameFor(u => u.User.BirthDay)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model.User.Family.Users.Where(u => !u.Id.Equals(User.Identity.GetUserId())))
                        {
                            <tr>
                                <td>@Html.DisplayFor(u => u.User.FirstName)</td>
                                <td>@Html.DisplayFor(u => u.User.LastName)</td>
                                <td>Level ?</td>
                                <td>@Html.DisplayFor(u => u.User.BirthDay)</td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@I18N.GenericAction.cancel</button>
                <button type="button" class="btn btn-primary">@I18N.View.Event.Action_JoinMember</button>
            </div>
        </div>
    </div>
</div>
